@model Faculty

@{
    ViewBag.Title = "Update Faculty";
    Layout = "_AdminLayout";
}

<h2 class="text-center my-3">Update Faculty</h2>

<form asp-action="UpdateFaculty" method="post" enctype="multipart/form-data" class="w-50 mx-auto">

    <input type="hidden" asp-for="FacultyId" />

    <div class="mb-3 text-center">
        <img src="~/admin/images/faculty/@Model.Image"
             class="rounded-circle border"
             width="120"
             height="120" />
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input name="Name" class="form-control"  value="@Model.Name"/>
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="mb-3">
        <label>Experience</label>
        <input name="Experience" class="form-control" value="@Model.Experience" />
    </div>

    <div class="mb-3">
        <label>Department</label>
        <input name="Department" class="form-control" value="@Model.Department" />
    </div>

    <div class="mb-3">
        <label>Update Image (optional)</label>
        <input type="file" name="image" class="form-control"  />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" >Update</button>
        <a asp-controller="Admin"  asp-action="Index" class="btn btn-secondary">Back</a>
    </div>

</form>
