@model IEnumerable<Faculty>

@{
    ViewBag.Title = "Faculty List";
    Layout = "_AdminLayout";
}

<h1 class="text-center my-3">Faculty List</h1>



<div class="container m-2">


    <a href="@Url.Action("CreateFaculty")" class="btn btn-success mb-3">
        Add New Faculty
    </a>

    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Experience</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @{
                int count = 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>

                    <td>
                        <img src="~/admin/images/faculty/@item.Image"
                             class="rounded-circle border"
                             width="60"
                             height="60"
                             alt="Faculty Image" />
                    </td>

                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Experience years</td>
                    <td>@item.Department</td>

                    <td>
                        <a asp-action="UpdateFaculty"
                           asp-route-id="@item.FacultyId"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>

                        <a href="@Url.Action("DeleteFaculty", "Admin", new{id=@item.FacultyId})"
                           class="btn btn-sm btn-danger"
                           onclick="return confirmDelete();">
                            Delete
                        </a>
                    </td>
                </tr>

                count++;
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this faculty?");
    }
</script>
