@model Course
@{
    ViewBag.Title = "Update Course";
    Layout = "_AdminLayout";
    var faculties = ViewBag.Faculties as List<Faculty>;
}

<h1 class="text-center my-3">Update Course Details</h1>

<form method="post" class="w-50 mx-auto">
    <input asp-for="CourseId" class="form-control" required hidden>
    <div class="mb-3">
        <label>Course Name</label>
        <input asp-for="CourseName" class="form-control" required>
    </div>

    <div class="mb-3">
        <label>Faculty</label>
        <select asp-for="FacultyId" class="form-control" required>
            <option value="">Select Faculty</option>
            @foreach (var f in faculties)
            {
                <option value="@f.FacultyId">@f.Name</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Duration (months)</label>
        <input asp-for="Duration" class="form-control" type="number" min="1" required>
    </div>

    <div class="mb-3">
        <label>Available Seats</label>
        <input asp-for="AvailableSeats" class="form-control" type="number" min="0" required>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Update Course</button>
        <a asp-controller="Admin" asp-action="FetchCourses" class="btn btn-secondary">Back</a>
    </div>
</form>