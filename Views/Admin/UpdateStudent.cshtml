@model Student;

@{
    ViewBag.Title = "Student Faculty";
    Layout = "_AdminLayout";
}

<h2 class="text-center my-3">Student Faculty</h2>

<form asp-action="UpdateStudent" method="post" enctype="multipart/form-data" class="w-50 mx-auto">

    <input type="hidden" asp-for="StudentId" />

    <div class="mb-3 text-center">
        <img src="~/admin/images/student/@Model.Image"
             class="rounded-circle border"
             width="120"
             height="120" />
    </div>

    <div class="mb-3">
        <label>Name</label>
        <input name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input name="Email" class="form-control" value="@Model.Email" />
    </div>

    <div class="mb-3">
        <label>Age</label>
        <input name="Age" class="form-control" value="@Model.Age" />
    </div>

    <div class="mb-3">
        <label>Batch</label>
        <input name="Batch" class="form-control" value="@Model.Batch" />
    </div>

    <div class="mb-3">
        <label>Update Image (optional)</label>
        <input type="file" name="image" class="form-control" />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-controller="Admin" asp-action="FetchStudent" class="btn btn-secondary">Back</a>
    </div>

</form>
