@model Enrollment
@{
    ViewBag.Title = "Update Enrollment";
    Layout = "_AdminLayout";

    var students = ViewBag.Students as List<Student>;
    var courses = ViewBag.Courses as List<Course>;
}

<h1 class="text-center mb-4">Update Student Enrollment</h1>

<form asp-action="UpdateEnrollment" method="post" class="w-50 mx-auto">

    

    <input asp-for="EnrollmentId" class="form-control" required hidden>

    <!-- Student -->
    <div class="mb-3">
        <label class="form-label">Student</label>
        <select asp-for="StudentId" class="form-control" required>
            <option value="">Select Student</option>
            @foreach (var s in students)
            {
                <option value="@s.StudentId">@s.Name</option>
            }
        </select>
    </div>

    <!-- Course -->
    <div class="mb-3">
        <label class="form-label">Course</label>
        <select asp-for="CourseId" class="form-control" required>
            <option value="">Select Course</option>
            @foreach (var c in courses)
            {
                <option value="@c.CourseId">@c.CourseName</option>
            }
        </select>
    </div>

    <!-- Enrollment Date -->
    <div class="mb-3">
        <label class="form-label">Enrollment Date</label>
        <input asp-for="EnrollmentDate" type="date" class="form-control" />
    </div>


    <div class="text-center">
        <button type="submit" class="btn btn-success">Update Enrollment</button>
        <a asp-controller="Admin" asp-action="FetchEnrollment" class="btn btn-secondary">Back</a>
    </div>

</form>
